{
    "hyprland/submap": {
        "format": "<span style=\"italic\">  {}</span>",
        "tooltip": false
    },
    "wlr/workspaces": {
        "disable-scroll": true,
        "acitve-only": false,
        "all-outputs": false,
        "format": "{name}",
        "on-click": "activate",
        "format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "4": "",
            "5": "",
            "urgent": "",
            "focused": "",
            "default": ""
        }
    },
    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true
    },
    "disk": {
        "interval": 30,
        "format": " {free}"
    },
    "tray": {
        "spacing": 10,
        "all-outputs": false
    },
    "clock": {
        "interval": 60,
        "align": 0,
        "rotate": 0,
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{: %I:%M   %a, %e %b}",
        "on-click-middle": "~/.config/hypr/scripts/change_wallpaper"
    },
    "cpu": {
        "all-outputs": false,
        "interva": 10,
        "format": " {usage}%",
        "tooltip": false
    },
    "memory": {
        "all-outputs": false,
        "interval": 30,
        "format": " {}%",
        "max-length": 10,
        "on-click-right": "kitty -e --title btop sh -c 'btop'"
    },
    "network": {
        "all-outputs": false,
        "interval": 2,
        "format-wifi": "  {essid} ({signalStrength}%)",
        "format-ethernet": " {bandwidthDownBytes}  {bandwidthUpBytes} ",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "all-outputs": false,
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-icons": {
            "headphone": " ",
            "hands-free": "  ",
            "headset": "",
            "phone": " ",
            "portable": " ",
            "car": " ",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
    "temperature": {
        "interval": 10,
        "tooltip": false,
        "thermal-zone": 0,
        "critical-threshold": 82,
        "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": [""],
        "on-click-right": "foot --title btop sh -c 'btop'"
    },
    "custom/power": {
        "format": " ",
        "tooltip": false,
        "on-click": "sh -c '(sleep 0.1s; wlogout --protocol layer-shell)' & disown"
    },
    "custom/menu": {
        "format": "",
        "tooltip": false,
        "on-click": "$HOME/.config/hypr/scripts/menu"
    },
    "custom/lockscreen": {
        "format": "",
        "on-click": "sh -c '(sleep 0.1s; swaylock)' & disown",
        "tooltip": false
    },
    "battery": {
        "interval": 60,
        "states": {
            "good": 80,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}% ",
        "format-icons": [" ", "", "", "", ""],
        "max-length": 25
    }
}
