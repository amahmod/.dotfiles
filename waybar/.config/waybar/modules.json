{
    "wlr/workspaces": {
        "disable-scroll": true,
        "acitve-only": false,
        "all-outputs": false,
        "format": "{name}",
        "format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "4": "",
            "5": "",
            "urgent": "",
            "focused": "",
            "default": ""
        }
    },
    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true
    },
    "tray": {
        "spacing": 10,
        "all-outputs": false,
        "output": "DP-1"
    },
    "clock": {
        "all-outputs": false,
        "output": "HDMI-A-1",
        "interval": 60,
        "format": "{:%I:%m}",
        "tooltip": true,
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "cpu": {
        "all-outputs": false,
        "output": "!DP-1",
        "interva": 10,
        "format": " {usage}%",
        "tooltip": false
    },
    "memory": {
        "all-outputs": false,
        "output": "!DP-1",
        "interval": 30,
        "format": " {}%",
        "max-length": 10
    },
    "network": {
        "all-outputs": false,
        "output": "!DP-1",
        "interval": 2,
        "interface": "enp*",
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-ethernet": " {bandwidthDownBytes}  {bandwidthUpBytes} ",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "all-outputs": false,
        "output": "!DP-1",
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-icons": {
            "headphone": " ",
            "hands-free": "  ",
            "headset": "",
            "phone": " ",
            "portable": " ",
            "car": " ",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    }
}
